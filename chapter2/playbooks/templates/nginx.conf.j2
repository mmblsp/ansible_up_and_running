server {
    listen 80;
    listen [::]:80 default_server ipv6only=on;
    server_name {{ server_name }};

}

server {
    listen 443 ssl;
    server_name {{ server_name }};
    ssl on;
    ssl_certificate {{ cert_file }};
    ssl_certificate_key {{ key_file }};
    
    root /usr/share/nginx/html;
    index index.html index.htm;

    location / {
        try_files $uri $uri/ =404;
    }

}
